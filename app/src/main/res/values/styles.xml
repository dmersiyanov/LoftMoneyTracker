<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue_grey</item>
        <item name="colorPrimaryDark">@color/dark_blue_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text.Item" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_l</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

</resources>
